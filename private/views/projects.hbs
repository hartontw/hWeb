<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Daniel Harton | {{ name }} </title>
    {{> styles }}
	<link rel="stylesheet" href="/assets/css/timeline-scroll.css">
	<style>
		body {
			background-image: linear-gradient(#EEEEEE, #555555);
		}

		.responsive {
			width: 100%;
			height: 130px;
		}
	</style>
</head>

<body>

{{> navbar }}

<div class="container-fluid">
	<div class="row">
	    <div id="timeline">
		{{#each years}}		
			{{#each months}}
				{{#each projects}}
				<div class="row timeline-movement">
					<div class="timeline-badge {{classA}}">					
					</div>
					<div class="{{classB}} timeline-item">
						<div class="row">
							<div class="{{classC}}">
								<div class="timeline-panel {{classD}}">
									<ul class="timeline-panel-ul">
										<div class="lefting-wrap">
											<li class="img-wraping"><a href="projects/{{title}}"><iframe class="responsive" src="{{thumbnail}}"></iframe></a></li>
										</div>
										<div class="righting-wrap">
											<li><a href="projects/{{title}}" class="importo">{{title}}</a></li>
											<li><span class="causale" style="color:#000; font-weight: 600;">{{position}}</span> </li>
											<li><span class="causale">{{description}}</span> </li>
											<li><p><small class="text-muted"><i class="glyphicon glyphicon-time"></i>{{date}}</small></p> </li>
										</div>
										<div class="clear"></div>
									</ul>
								</div>

							</div>
						</div>
					</div>
				</div>
				{{/each}}
			{{/each}}
			<div class="row timeline-movement timeline-movement-top">
				<div class="timeline-badge timeline-future-movement">
					<p>{{year}}</p>
				</div>
			</div>
		{{/each}}		
		</div>
	</div>
</div>

{{> scripts }}
<script src="/assets/js/timeline-scroll.js"></script>

{{> footer }}

</body>
</html>