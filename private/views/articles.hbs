<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Daniel Harton | {{ title }} </title>
    {{> styles }}
    <link rel="stylesheet" href="/assets/css/articles.css">
    	<style>
		body {
			background-color: #EEEEEE;
		}
	</style>
</head>

<body>

{{> navbar }}

<div class="expanded">
    <div class="row">
        {{#each articles}}        
        <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
            <div class="card">
                <a href="/article/{{title}}"><img class="card-img-top" src="{{thumbnail}}"></a>
                <div class="card-block">
                    <a href="/article/{{title}}"><h5 class="text-bold">{{title}}</h5></a>
                    <small>{{dateString}}</small>
                </div>
                <div class="card-footer">
                    <small>
                        {{#each tags}}
                        <a href="/articles/{{name}}">{{name}}</a>,
                        {{/each}}
                    </small>
                </div>
            </div>
        </div>  
        {{/each}} 
    </div>
</div>

{{> scripts }}

{{> footer }}

</body>
</html>